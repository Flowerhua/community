extends ./layedit

block css
    style.

        h1 {
            margin-top: 100px;
            color: #f00;
            font-size: 50px;
            text-align: center;
        }
        h2 {
            margin-top: 50px;
            font-size: 32px;
            text-align: center;
        }


block content
    .layui-container
        h1 sorry 404
        h2
            span#num 5
            |秒后返回首页

block scripts
    script.

        var num = document.getElementById('num')
        var n = 5

        setInterval(function () {

            num.innerText = --n
            if (n === 0) {
                window.location.href = '/'
            }

        }, 1000)

