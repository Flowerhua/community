extends common/layout



block content
    .layui-container
        .layui-tab
            ul.layui-tab-title
                li(class=isLogin?"layui-this":"")
                    a(href="/user/login") 登陆
                li(class=isLogin?"":"layui-this")
                    a(href="/user/reg") 注册

        .layui-tab-content
            if isLogin
                .layui-tab-item(class="layui-show")
                    form.layui-form
                        .layui-form-item
                            label.layui-form-label 用户名
                            .layui-input-inline
                                input(type="text",name="username",autocomplete="off" lay-verify="required",placeholder="请输入用户名").layui-input

                        .layui-form-item
                            label.layui-form-label 密码
                            .layui-input-inline
                                input(type="password",name="password",autocomplete="off" lay-verify="required",placeholder="请输入密码").layui-input

                        .layui-form-item
                            .layui-input-block
                                button(type="reset").layui-btn 重置
                                button(lay-submit,lay-filter="login").layui-btn 立即登陆

            else
                .layui-tab-item(class="layui-show")
                    form.layui-form
                        .layui-form-item
                            label.layui-form-label 用户名
                            .layui-input-inline
                                input(type="text",name="username",autocomplete="off" lay-verify="required|username",placeholder="请输入用户名").layui-input
                            .layui-form-mid.layui-word-aux(style="color:red;")
                        .layui-form-item
                            label.layui-form-label 密码
                            .layui-input-inline
                                input(type="password",name="password",autocomplete="off" lay-verify="required|password",placeholder="请输入密码").layui-input

                        .layui-form-item
                            label.layui-form-label 确认密码
                            .layui-input-inline
                                input(type="password",name="confirmPwd",placeholder="再次输入密码",autocomplete="off" lay-verify="required").layui-input
                        .layui-form-item
                            .layui-input-block
                                button(type="reset").layui-btn 重置
                                button(lay-submit,lay-filter="reg").layui-btn 立即注册

                
                
block scripts
    script(src="https://cdn.bootcss.com/blueimp-md5/2.10.0/js/md5.min.js")
    script(src="/js/register.js")
